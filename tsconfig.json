{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/ui-core/src/*"],
      "@assets/*": ["assets/*"],
      "@ui/*": ["packages/ui-core/src/components/ui/*"],
      "@core/*": ["packages/ui-core/src/components/core/*"],
      "@common/*": ["packages/ui-core/src/components/common/*"],
      "@lib": ["packages/ui-core/src/lib/*"]
    }
  },
  "include": ["types.d.ts", "*.js", "*.ts", "*.tsx", "*.json", "assets/**/*", "packages/**/*", "stories/**/*"],
  "exclude": ["node_modules", "dist", "build", "storybook-static"]
}

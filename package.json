{
  "name": "reusable-ui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "npm run build --workspace=packages/ui-core",
    "build:ui": "npm run build --workspace=packages/ui-core",
    "build-storybook": "storybook build --output-dir storybook-static",
    "preview-storybook": "npx http-server storybook-static",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:packages": "npm run lint --workspace=packages/ui-core",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "type-check:packages": "npm run type-check --workspace=packages/ui-core",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "deploy-storybook": "npm run build-storybook && touch storybook-static/.nojekyll && npx gh-pages -d storybook-static",
    "clean": "npm run clean --workspace=packages/ui-core && rm -rf storybook-static",
    "clean:all": "npm run clean && rm -rf node_modules packages/*/node_modules",
    "postinstall": "npx update-browserslist-db@latest --no-update-notifier"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-viewport": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "gh-pages": "^6.3.0",
    "playwright": "^1.53.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "storybook": "^8.6.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

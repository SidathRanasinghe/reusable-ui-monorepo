{
  "name": "reusable-ui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "preview-storybook": "npx http-server storybook-static",
    "lint": "eslint packages/ui-core/src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build": "npm run build --workspace=packages/ui-core",
    "deploy-storybook": "npm run build-storybook && npx gh-pages -d storybook-static"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-a11y": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-docs": "^9.0.8",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/addon-vitest": "^9.0.8",
    "@storybook/react-vite": "^9.0.8",
    "@types/node": "^24.0.1",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "gh-pages": "^6.3.0",
    "playwright": "^1.53.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "storybook": "^9.0.8",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.3"
  }
}
